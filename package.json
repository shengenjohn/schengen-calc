{
  "name": "schengen-calc",
  "version": "1.0.0",
  "description": "Travel compliance platform for Schengen area calculations with subscription billing",
  "main": "index.js",
  "scripts": {
    "dev": "wrangler pages dev",
    "deploy": "wrangler pages deploy",
    "build": "npm run build:css",
    "build:css": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "db:migrate": "wrangler d1 execute schengen-calc-db --file=./database-schema.sql",
    "db:local": "wrangler d1 execute schengen-calc-db --local --file=./database-schema.sql"
  },
  "keywords": [
    "travel",
    "schengen", 
    "compliance",
    "immigration",
    "subscription",
    "square",
    "payments"
  ],
  "author": "John - Schengen Calc",
  "license": "MIT",
  "dependencies": {
    "squareup": "^21.0.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231025.0",
    "wrangler": "^3.15.0",
    "tailwindcss": "^3.3.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shengenjohn/schengen-calc.git"
  },
  "homepage": "https://shengencalc.com"
}
